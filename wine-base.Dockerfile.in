ENV CC=@ARCH@-linux-gnu-gcc
ENV CXX=@ARCH@-linux-gnu-g++
ENV CROSSCC=@ARCH@-w64-mingw32-gcc
ENV CROSSCXX=@ARCH@-w64-mingw32-g++
