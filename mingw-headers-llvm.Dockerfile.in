FROM @BASE_IMAGE@ AS build

RUN wget --no-check-certificate -qO- https://github.com/rbernon/mingw-w64/archive/v@MINGW_VERSION@.tar.gz | tar xzf - -C /tmp \
&& cd /tmp/mingw-w64-@MINGW_VERSION@/mingw-w64-headers \
&& ./configure --quiet \
  --prefix=/usr/@ARCH@-w64-mingw32/ \
  --host=@ARCH@-w64-mingw32 \
  --enable-sdk=all \
  --enable-secure-api \
  --enable-idl \
  --with-default-win32-winnt=0x601 \
  --with-default-msvcrt=ucrt \
  MAKEINFO=true \
&& make --quiet -j$(nproc) MAKEINFO=true \
&& make --quiet -j$(nproc) MAKEINFO=true install-strip DESTDIR=/opt \
&& rm -rf /opt/usr/share/doc /opt/usr/share/info /opt/usr/share/man \
&& rm -rf /tmp/mingw-w64-@MINGW_VERSION@
