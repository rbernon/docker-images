FROM @BASE_IMAGE@ AS base
RUN apt-get update && apt-get install -y \
  cmake \
  libdrm-dev \
  libxcb-dri2-0-dev \
  libxcb-dri3-dev \
  libxcb-present-dev \
  libxshmfence-dev \
  llvm-dev \
  meson \
  python3-mako \
&& rm -rf /opt/usr/share/doc /opt/usr/share/info /opt/usr/share/man \
&& rm -rf /var/lib/apt/lists/*

CMD ["/bin/bash"]
