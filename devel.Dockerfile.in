FROM @BASE_IMAGE@ AS build
RUN apt-get update && apt-get install -y \
  cmake \
  libdrm-dev \
  libxcb-dri2-0-dev \
  libxcb-dri3-dev \
  libxcb-present-dev \
  libxshmfence-dev \
  llvm-dev \
  meson \
  python3-mako \
&& rm -rf /opt/usr/share/doc /opt/usr/share/info /opt/usr/share/man \
&& rm -rf /var/lib/apt/lists/*

ADD https://github.com/krallin/tini/releases/download/v0.19.0/tini-@ARCH_TINI@ /tini
RUN chmod +x /tini
ENTRYPOINT ["/tini", "-s", "-g", "--"]

CMD ["/bin/bash"]
